{
    "compilerOptions": {
        "lib": [
            "ESNext"
        ],
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "allowJs": true,
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "bun",
            "jest"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}
